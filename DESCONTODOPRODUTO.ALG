algoritmo "DescontoDoProduto"
var
   valor, desconto: real
   sn: inteiro
inicio
   Repita
      Escreva ("Qual o valor do produto? R$")
      Leia (valor)
      Escreval ( )
      desconto <- (valor)* 10/100
      Escreval ("O desconto é de R$", desconto)
      Escreva ("Deseja continuar? [1]SIM/[2]NÃO")
      Leia (sn)
   Ate (sn = 2)
fimalgoritmo